azul = rgb(24,105,171)
celeste = #22BCE0
gris_claro = #AAA
gris_oscuro = #444
verde = rgb(166,226,44)


@font-face {
	font-family: 'iconos_login';
	src:url('../fonts/icomoon.eot?-hb96q9');
	src:url('../fonts/icomoon.eot?#iefix-hb96q9') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-hb96q9') format('woff'),
		url('../fonts/icomoon.ttf?-hb96q9') format('truetype'),
		url('../fonts/icomoon.svg?-hb96q9#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background rgba(gris_claro, 0.3)
	font-size 15px
	font-family Tahoma

footer
	background verde
	color rgba(gris_oscuro,0.5)
	font-size 0.7em
	margin 0
	overflow hidden
	padding 0 1.5em

	.ubicacion
		text-align center

		.nombre
			display:block

		.direccion_ful
			display:block

			.ciudad
			.pais
				&:before
					content "- "

	.contacto
		text-align center

		.telefono_email
			display block

			a
				color rgba(gris_oscuro,0.5)
				text-decoration none

		.copyright
			display block
			text-align center

header
	background celeste
	box-shadow 0px 5px 5px rgba(gris_oscuro,0.5)
	color gris_oscuro
	overflow hidden
	position relative

	.logo
		float left

		img
			width 70px

	.titular
		margin 5px 0 30px 70px
		width 55%

		.iniciales
			font-size 30px
			margin 0
			text-shadow 5px 5px 1px rgba(gris_oscuro, 0.5)
			width 4em

		.ful_nombre
			border-top 1px solid gris_oscuro
			font-size 15px
			padding-top .1em

			.parte_uno
			.parte_dos
				font-weight bold
				margin 0
				padding 0
	
	.fecha
		bottom 5px
		font-size 12px
		position absolute
		right 5px

section
	padding 1em 0 2em 0

	.titulo_form
		color azul
		margin 0 auto
		text-align center
		padding 0.5em 0
		width 300px

	.formulario
		background rgba(azul,0.2)
		border 1px solid rgba(blue, 0.5)
		border-radius 0.5em
		margin 0 auto
		padding 0.2em
		width 300px

		form
			border 1px solid rgba(blue, 0.5)
			border-radius 0.3em
			overflow hidden			
			padding 0 0 1em 0

			.zona_campo
				background white
				border-left 4px solid celeste
				border-bottom 1px solid gris_claro
				border-right 1px solid gris_claro
				border-top 1px solid gris_claro
				margin 1.5em				
				padding 0.5em
				overflow hidden

				.usuario
					&:after
						color azul
						content "\e600"
						font-family "iconos_login"
						font-size 20px

				.clave
					&:after
						color azul
						content "\e601"
						font-family "iconos_login"
						font-size 20px

				
				.textbox
					background white
					border none
					float right
					font-size 0.8em
					height 25px
					width 200px
					&:focus
						outline 0px


			.zona_accion
				border-top 1px solid blue

				.buton
					color azul
					background white
					border 1px solid blue
					float right
					margin 0.5em 1.5em 0 0
					

@media screen and (min-width: 768px)
	
	header
		.logo
			img
				width 140px

		.titular
			margin-top 37px
			margin-left 140px
			width 420px

			.iniciales
				border-right 1px solid gris_oscuro
				float left
				font-size 50px

			.ful_nombre
				border-top none
				font-size 20px
				margin-left 10.3em
				padding-top .3em
				width 12em
	
		.fecha
			font-size 15px

	footer
		.ubicacion
			float left

		.contacto
			float right

			.copyright
				display block
				text-align right